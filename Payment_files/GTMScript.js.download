function GTMAddToCart(cartItems) {    
    dataLayer.push({ ecommerce: null });  // Clear the previous ecommerce object.
    dataLayer.push({
        event: "add_to_cart",
        ecommerce: {
            items: cartItems
        }
    });
}

function GTMPurchase(itemsPurchased, transactionId, totalValue) {    
    dataLayer.push({ ecommerce: null });  // Clear the previous ecommerce object.
    dataLayer.push({
        event: "purchase",
        ecommerce: {
            transaction_id: transactionId,
            affiliation: "ALPS Insurance",
            value: totalValue,
            tax: 0,
            shipping: 0,
            currency: "USD",
            items: itemsPurchased
        }
    });
}

function GTMViewCart(cartItems, totalValue) {    
    dataLayer.push({ ecommerce: null });  // Clear the previous ecommerce object.
    dataLayer.push({
        event: "view_cart",
        ecommerce: {
            currency: "USD",
            value: totalValue,
            items: cartItems
        }
    });
}